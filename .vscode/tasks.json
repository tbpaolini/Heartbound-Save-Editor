{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Release",
            "command": "make",
            "args": [
                "-B",
                "release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "With compiler optimizations."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Debug",
            "command": "make",
            "args": [
                "-B",
                "debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "With debug info and optimized for debugging."
        }
    ],
    "version": "2.0.0"
}